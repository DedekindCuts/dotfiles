	// 	"description": "Log output to console"
	// }

	"README": {
		"prefix": "rd", 
		"body": [
			"${1:Repo Name}\n=============================\n\n${2:Description}\n\n## ${3:Section 1}\n\n$0"
		], 
		"description": "README file template"
	}
}